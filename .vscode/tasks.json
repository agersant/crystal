{
	"version": "0.1.0",
	"showOutput": "always",
	
    "tasks": [

		// Launch game
		{
			"taskName": "Run",
			"options": { "cwd": "${workspaceRoot}\\game" },
			"command": "love",
			"args": ["."]
		},

		// Run unit tests
        {
			"isTestCommand": true,
			"taskName": "Test",
			"options": { "cwd": "${workspaceRoot}\\game" },
			"command": "love",
			"args": [".", "/test"],
			"problemMatcher": {
				"owner": "lua",
				"fileLocation": ["relative", "${workspaceRoot}\\game"],
				"pattern": {
					"regexp": "^(.*):(\\d+):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"message": 3
				}
			}
        },
		
		// Build Beryl (Windows Release)
		{
			"isBuildCommand": true,
			"taskName": "Build Beryl Release (Windows)",
			"options": { "cwd": "${workspaceRoot}" },
			"command": "msbuild",
			"args": ["/m", "/p:Configuration=Release;OutDir=${workspaceRoot}\\game\\", ".\\source\\code\\beryl\\beryl.sln"],
			"problemMatcher": "$msCompile"
		},
		
		// Build Beryl (Windows Debug)
		{
			"taskName": "Build Beryl Debug (Windows)",
			"options": { "cwd": "${workspaceRoot}" },
			"command": "msbuild",
			"args": ["/m", "/p:Configuration=Debug;OutDir=${workspaceRoot}\\game\\", ".\\source\\code\\beryl\\beryl.sln"],
			"problemMatcher": "$msCompile"
		}
		
    ]
}