{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Launch Game",
			"type": "process",
			"options": {
				"cwd": "${workspaceRoot}\\game"
			},
			"command": "love",
			"args": [
				"."
			],
			"problemMatcher": []
		},
		{
			"label": "Run Test Suite",
			"type": "process",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always"
			},
			"options": {
				"cwd": "${workspaceRoot}\\game"
			},
			"command": "love",
			"args": [
				".",
				"/test"
			],
			"problemMatcher": {
				"owner": "lua",
				"fileLocation": [
					"relative",
					"${workspaceRoot}\\game"
				],
				"pattern": {
					"regexp": "^(.*):(\\d+):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"message": 3
				}
			}
		},
		{
			"label": "Build Beryl",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"command": ".\\build_beryl_windows.ps1",
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"clear": false
			},
			"problemMatcher": "$msCompile"
		}
	]
}