{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Launch Game",
			"type": "shell",
			"options": {
				"cwd": "${workspaceRoot}\\game"
			},
			"command": "lovec",
			"args": [
				"."
			],
			"problemMatcher": {
				"owner": "lua",
				"fileLocation": [
					"relative",
					"${workspaceRoot}\\game"
				],
				"pattern": {
					"regexp": "^Error:\\s*([^\\s]*):(\\d+):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"message": 3
				}
			}
		},
		{
			"label": "Run Test Suite",
			"type": "shell",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"clear": true
			},
			"options": {
				"cwd": "${workspaceRoot}\\game"
			},
			"command": "lovec",
			"args": [
				".",
				"/test-unit"
			],
			"problemMatcher": {
				"owner": "lua",
				"fileLocation": [
					"relative",
					"${workspaceRoot}\\game"
				],
				"pattern": {
					"regexp": "^Error:\\s*([^\\s]*):(\\d+):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"message": 3
				}
			}
		}
	]
}