{
	"version": "2.0.0",
	"tasks": [
		// Launch game
		{
			"label": "Run",
			"type": "process",
			"options": {
				"cwd": "${workspaceRoot}\\game"
			},
			"command": "love",
			"args": [
				"."
			]
		},
		// Run unit tests
		{
			"label": "Test",
			"type": "process",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
			},
			"options": {
				"cwd": "${workspaceRoot}\\game"
			},
			"command": "love",
			"args": [
				".",
				"/test"
			],
			"problemMatcher": {
				"owner": "lua",
				"fileLocation": [
					"relative",
					"${workspaceRoot}\\game"
				],
				"pattern": {
					"regexp": "^(.*):(\\d+):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"message": 3
				}
			}
		},
		// Build Beryl (Windows Release)
		{
			"label": "Build Beryl Release (Windows)",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"command": "msbuild",
			"args": [
				"/m",
				"/p:Configuration=Release;OutDir=${workspaceRoot}\\game\\",
				".\\lib\\beryl\\beryl.sln"
			],
			"problemMatcher": "$msCompile"
		},
		// Build Beryl (Windows Debug)
		{
			"label": "Build Beryl Debug (Windows)",
			"group": "build",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"command": "msbuild",
			"args": [
				"/m",
				"/p:Configuration=Debug;OutDir=${workspaceRoot}\\game\\",
				".\\lib\\beryl\\beryl.sln"
			],
			"problemMatcher": "$msCompile"
		}
	]
}