{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Launch Game",
      "type": "shell",
      "command": "bin\\lovec.exe",
      "args": ["game"],
      "problemMatcher": {
        "owner": "lua",
        "fileLocation": ["relative", "${workspaceRoot}\\game"],
        "pattern": {
          "regexp": "^Error:\\s*([^\\s]*):(\\d+):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "message": 3
        }
      }
    },
    {
      "label": "Run Unit Tests",
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "clear": true
      },
      "command": "bin\\lovec.exe",
      "args": ["game", "/test-unit"],
      "problemMatcher": {
        "owner": "lua",
        "fileLocation": ["relative", "${workspaceRoot}\\game"],
        "pattern": {
          "regexp": "^Error:\\s*([^\\s]*):(\\d+):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "message": 3
        }
      }
    },
    {
      "label": "Run All Tests",
      "type": "shell",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "clear": true
      },
      "command": "bin\\lovec.exe",
      "args": ["game", "/test-unit", "/test-gfx"],
      "problemMatcher": {
        "owner": "lua",
        "fileLocation": ["relative", "${workspaceRoot}\\game"],
        "pattern": {
          "regexp": "^Error:\\s*([^\\s]*):(\\d+):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "message": 3
        }
      }
    }
  ]
}
